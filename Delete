        }
        
        if(c==0)
        {
            System.out.println("Invalid Input");
        }
        else
        {
            for(int i=0;i<n;i++)
            {
                if(arr[i]==a)
                {
                    
                }
                 else
                 {
                     System.out.println(arr[i]);
                 }
            }
